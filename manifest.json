{
  "manifest_version": 2,
  "name": "PlunetHelper",
  "version": "1.6",
  "author": "Michael K. Schmidt",
  "description": "Helps formatting Plunet request mails",
  "icons": { "128" : "img/sunshine.png"},
  "homepage_url": "https://github.com/TinkerToysCodeManufaktur/PlunetHelper",
  "content_scripts": [
    {
      "matches": ["https://plunet.altagram.de:8443/pagesUTF8/Sys_EMailNeu.jsp*", "http://plunet.altagram.de/pagesUTF8/Sys_EMailNeu.jsp*"],
      "run_at": "document_end",
      "js": ["js/PlunetHelper.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    "img/*.png", 
    "js/*.js",
    "css/*.css"
  ]
}
